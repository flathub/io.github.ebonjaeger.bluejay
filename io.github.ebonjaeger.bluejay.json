{
    "id": "io.github.ebonjaeger.bluejay",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "bluejay",
    "finish-args": [
        "--allow=bluetooth",
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
